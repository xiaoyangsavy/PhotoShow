<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".IndexActivity" >

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white"
        android:flipInterval="30"
        android:persistentDrawingCache="animation"
        android:visibility="gone"
        />

    <!-- 需要扩展app命名空间 -->
    <com.savy.imageshow.custom.BannerIndicatorView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/indicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:app_cell_count="4"
        app:app_current_position="0"
        app:app_cell_radius="8dp"
        app:app_cell_margin="20dp"
        app:app_normal_color="@color/whiteBackage"
        app:app_selected_color="@color/golden"
        app:app_indicator_style="CIRCLE"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>